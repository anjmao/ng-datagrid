{
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "clean": "rimraf out-tsc dist/* integration/node_modules/@ng-select",
    "prebuild": "yarn clean",
    "build": "ng-packagr -p ./src/package.json && yarn build:themes",
    "build:demo": "rimraf dist && webpack --config ./scripts/webpack.dev.js",
    "build:themes": "node-sass --output-style compressed src/themes/ -o dist/themes",
    "prestart": "yarn install",
    "start": "webpack-serve --config ./scripts/webpack.dev.js --no-hot --port 8080 --open",
    "test:watch": "jest --watch --config ./scripts/jest.config.js",
    "test": "jest --coverage --config ./scripts/jest.config.js",
    "coveralls": "cat ./coverage/lcov/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "integration": "./integration_test.sh",
    "lint": "tslint --type-check --project ./src/tsconfig.json",
    "release": "sh ./release.sh"
  },
  "devDependencies": {
    "@angular/common": "^6.0.2",
    "@angular/compiler": "^6.0.2",
    "@angular/compiler-cli": "^6.0.2",
    "@angular/core": "^6.0.2",
    "@angular/forms": "^6.0.2",
    "@angular/platform-browser": "^6.0.2",
    "@angular/platform-browser-dynamic": "^6.0.2",
    "@angular/router": "^6.0.2",
    "@mdi/font": "^2.3.54",
    "@ng-bootstrap/ng-bootstrap": "^2.0.0",
    "@ngtools/webpack": "^6.0.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.8",
    "@types/selenium-webdriver": "3.0.8",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^5.0.0",
    "bootstrap": "^4.1.1",
    "copy-webpack-plugin": "^4.5.1",
    "core-js": "^2.5.6",
    "coveralls": "^3.0.1",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "gh-pages-travis": "^1.0.4",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "jest-css-modules": "^1.1.0",
    "jest-zone-patch": "^0.0.8",
    "jquery": "^3.3.1",
    "ng-packagr": "^2.4.4",
    "ng-snippets-loader": "^0.2.5",
    "node-sass": "^4.9.0",
    "popper.js": "^1.14.3",
    "postcss-loader": "^2.1.5",
    "raw-loader": "0.5.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.1",
    "rxjs": "^6.1.0",
    "sass-loader": "^7.0.1",
    "standard-version": "^4.3.0",
    "style-loader": "^0.21.0",
    "ts-helpers": "^1.1.1",
    "ts-jest": "^22.4.6",
    "tsickle": "^0.28.0",
    "tslib": "^1.9.0",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": ">=2.7.0 <2.8.0",
    "webpack": "4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "3.1.4",
    "webpack-serve": "^1.0.2",
    "zone.js": "^0.8.26"
  }
}
